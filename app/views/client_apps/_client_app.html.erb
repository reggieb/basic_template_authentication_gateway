<div class="client_app">
  <h2><%= client_app.name %></h2>
  <ul>
    <li>Return URL: <%= sanitize(client_app.return_uri) %>
    <li>Client ID: <%= client_app.client_id %></li>
    <li>Client Secret: <%= client_app.client_secret %></li>
  </ul>
  <ul class="nav nav-pills">
<% if action_name == 'index' %>
    <li><%= link_to 'Show', client_app_path(client_app) %></li>
<% else %>
    <li><%= link_to 'Edit', edit_client_app_path(client_app) %></li>
    <li>
      <%= link_to(
            'Delete',
            client_app_path(
              client_app,
              method: :delete,
              confirm: 'Are you sure you want to delete this client application?'
            )
          )
      %>
    </li>
<% end %>
  </ul>
</div>